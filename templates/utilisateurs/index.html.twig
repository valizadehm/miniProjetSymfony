{% extends 'base.html.twig' %}

{% block title %}Utilisateurs index
{% endblock %}

{% block body %}
	<h1>Utilisateurs index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Email</th>
				<th>Roles</th>
				<th>Password</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for utilisateur in utilisateurs %}
				<tr>
					<td>{{ utilisateur.id }}</td>
					<td>{{ utilisateur.email }}</td>
					<td>{{ utilisateur.roles ? utilisateur.roles|json_encode : '' }}</td>
					<td>{{ utilisateur.password }}</td>
					<td>
						<a href="{{ path('app_utilisateurs_show', {'id': utilisateur.id}) }}">show</a>
						<a href="{{ path('app_utilisateurs_edit', {'id': utilisateur.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_utilisateurs_new') }}">Create new</a>
{% endblock %}
