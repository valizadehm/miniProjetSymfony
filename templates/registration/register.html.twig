{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<section class="container my-3">
		<div class="row">
			<div class="col">
				<h1>Inscription</h1>
				{{ form_start(registrationForm) }}
				<fieldset class="mb-3">

					{{ form_row(registrationForm.email) }}
				</fieldset>
				<fieldset class="mb-3">
					{{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}
				</fieldset>

				{{ form_row(registrationForm.agreeTerms) }}

				<button type=" submit" class=" btn btn-primary btn-lg">M'inscrire</button>
				<a ref="{{path('app_login')}}" class="btn btn-secondary">Me connecter</a>
				{{ form_end(registrationForm) }}
			</div>

		</div>
	</section>

{% endblock %}
